%section
  .container
    %h2.center Edit Profile

%section{ 'ng-app' => true }
  .container
    = form_for [:admin, @user], url: admin_users_path, html: { class: 'contact' } do |f|
      - flash.each do |key, msg|
        .alert{ class: key }
          = msg.html_safe
      .input-container
        .input.input-left
          = f.label :first_name, 'First Name'
          = f.text_field :first_name
        .input.input-right
          = f.label :last_name, 'Last Name'
          = f.text_field :last_name
        .input
          = f.label :email
          = f.text_field :email
        .input
          = f.label :password
          = f.password_field :password
        .input
          = f.label :password_confirmation, 'Password Confirmation'
          = f.password_field :password_confirmation

      .submit
        %button.button Update