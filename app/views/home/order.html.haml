%section
  .container
    %h1.center Products

%section{ 'ng-app' => 'cartsApp', 'ng-controller' => 'CartsCtrl'}
  .container
    .tabs
      = link_to '#food', class: 'tab selected', 'data-show' => 'food' do
        %span Food
      = link_to '#shirts', class: 'tab', 'data-show' => 'shirts' do
        %span Shirts
    .tiles-3.food.tab-section
      - 10.times do |n|
        .tile-item
          %h3 Food
    .tiles-4.shirts.tab-section
      - 15.times do |n|
        .tile-item
          .product-box
            product image here
          .product-details
            .sizes
              %h5 Size
              %span S
              %span M
              %span L
              %span XL
              %span XXL
            .colors
              %h5 Color
              .color{ 'ng-repeat' => 'color in colors' }
                %div{ 'ng-style' => '{"background-color": color.hex_value}' }
              / .color
              /   .white
              / .color
              /   .orange
              / .color
              /   .green
              / .color
              /   .black
              / .color
              /   .red
            %h5 Quantity
            = text_field_tag :quantity, nil, class: 'short'
            %span.price $19.99
            .stock In Stock
            = link_to 'Add to Cart', '', class: 'button add-to-cart', 'ng-click' => 'add_product()'

:javascript
  $(document).ready(function() {
    Utils.adjustTileSize('.tiles-4');
    new Pages.Order();
    new Components.Tabs();
    AngularDataSeed({
      cart: #{current_cart.to_json},
      colors: #{@colors.to_json}
    });
  })