- content_for :my_layout do
  .wrapper
    = render 'layouts/header'
    / %section.slogan
    /   - if content_for? :slogan
    /     .container
    /       = yield :slogan
    = content_for?(:main) ? yield(:main) : yield
    .push
  = render 'layouts/footer'

= render template: 'layouts/application'
